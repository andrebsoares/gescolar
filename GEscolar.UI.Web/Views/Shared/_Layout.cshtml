@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GEscolar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cadastros <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Alunos", "Index", "Aluno")</li>
                            <li>@Html.ActionLink("Cursos", "Index", "Curso")</li>
                            <li>@Html.ActionLink("Disciplinas", "Index", "Disciplina")</li>
                            <li>@Html.ActionLink("Professores", "Index", "Usuario")</li>
                            <li>@Html.ActionLink("Turmas", "Index", "Turma")</li>
                            <li>@Html.ActionLink("Alunos Turmas", "Index", "AlunoTurma")</li>
                            <li>@Html.ActionLink("Disciplinas Turmas", "Index", "DisciplinaTurma")</li>
                            <li>@Html.ActionLink("Faltas", "Index", "Falta")</li>
                            <li>@Html.ActionLink("Notas", "Index", "Nota")</li>
                        </ul>
                    </li>                   
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @{ Html.RenderPartial("_Alert"); }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Gestão Escolar</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
