@model IEnumerable<GEscolar.Dominio.gesc_curso>
@using GridMvc.Html

@{
    ViewBag.Title = "Lista de Cursos";
    Layout = "~/Views/Shared/_LayoutGrid.cshtml";
}

@Html.Grid(Model).Columns(columns =>
        {
            columns.Add(x => x.CUR_IN_CODIGO).Titled("Código").SetWidth(10).Sortable(true).Filterable(true);
            columns.Add(x => x.CUR_ST_DESCRICAO).Titled("Descrição").Sortable(true).Filterable(true);
            columns.Add(x => x.CUR_CH_TIPO).Titled("Tipo").Sortable(true).Filterable(true);
            columns.Add(x => x.CUR_IN_DURACAO).Titled("Duração").Sortable(true).Filterable(true);
            columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(d =>
    @<b>
        <div style="float: right">
            @Html.ActionLink(" ", "Edit", new { id = d.CUR_IN_CODIGO }, new
                {
                    style = "background: url('" + Url.Content("~/images/editar.png") + "') no-repeat center right; display:block; height:16px;width:16px; ",
                    @title = "Editar"
                })
        </div>
    </b>);

            columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(d =>
    @<b>
        <div style="float: right">
            @Html.ActionLink(" ", "Details", new { id = d.CUR_IN_CODIGO }, new
                {
                    style = "background: url('" + Url.Content("~/images/detalhes.png") + "') no-repeat center right; display:block; height:16px;width:16px; ",
                    @title = "Mais detalhes"
                })
        </div>
    </b>);

            columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(d =>
    @<b>
        <div style="float: right">
            @Html.ActionLink(" ", "Delete", new { id = d.CUR_IN_CODIGO }, new
                    {
                        style = "background: url('" + Url.Content("~/images/apagar.png") + "') no-repeat center right; display:block; height:16px;width:16px; ",
                        @title = "Apagar"
                    })
        </div>
    </b>);
        }).WithPaging(10).Sortable(true).WithMultipleFilters().SetLanguage("pt")
