@model GEscolar.Dominio.gesc_alunoturma

@{
    ViewBag.Title = "Cadastro de Aluno Turma";
    Layout = "~/Views/Shared/_LayoutEdicao.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form_Submit" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.ALT_IN_CODIGO)        
        <div class="form-group">
            @Html.LabelFor(model => model.ALT_IN_CODIGO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ALT_IN_CODIGO, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.ALT_IN_CODIGO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ALU_IN_CODIGO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.ALU_IN_CODIGO, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("ALU_IN_CODIGO", String.Empty)
                @Html.ValidationMessageFor(model => model.ALU_IN_CODIGO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TUR_IN_CODIGO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.TUR_IN_CODIGO, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("TUR_IN_CODIGO", String.Empty)
                @Html.ValidationMessageFor(model => model.TUR_IN_CODIGO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ALT_CH_STATUS, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.ALT_CH_STATUS, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.ALT_CH_STATUS, new SelectList(
                                                                          new List<Object>{
                                                                          new { value = 'A' , text = "Ativo" },
                                                                          new { value = 'I' , text = "Inativo"},
                                                                      },
                                                                      "value",
                                                                      "text",
                                                               'A'), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ALT_CH_STATUS, "", new { @class = "text-danger" })
            </div>
        </div>
        
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
