@model IEnumerable<GEscolar.Dominio.gesc_turma>
@using GridMvc.Html

@{
    ViewBag.Title = "Lista de Turmas";
    Layout = "~/Views/Shared/_LayoutGrid.cshtml";
}

@Html.Grid(Model).Columns(columns =>
        {
            columns.Add(x => x.TUR_IN_CODIGO).Titled("Código").SetWidth(10).Sortable(true).Filterable(true);
            columns.Add(x => x.TUR_ST_DESCRICAO).Titled("Descrição").Sortable(true).Filterable(true);
            columns.Add(x => x.TUR_CH_PERIODO).Titled("Período").Sortable(true).Filterable(true);
            columns.Add(x => x.CUR_IN_CODIGO).Titled("Curso").Sortable(true).Filterable(true);
            columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(d =>
    @<b>
        <div style="float: right">
            @Html.ActionLink(" ", "Index","AlunoTurma", new { codTurma = d.TUR_IN_CODIGO }, new
                {
                    style = "background: url('" + Url.Content("~/images/visualizar.png") + "') no-repeat center right; display:block; height:16px;width:16px; ",
                    @title = "Visualizar alunos desta turma"
                })
        </div>
    </b>);
            columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(d =>
    @<b>
        <div style="float: right">
            @Html.ActionLink(" ", "Edit", new { id = d.TUR_IN_CODIGO }, new
                {
                    style = "background: url('" + Url.Content("~/images/editar.png") + "') no-repeat center right; display:block; height:16px;width:16px; ",
                    @title = "Editar"
                })
        </div>
    </b>);

            columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(d =>
    @<b>
        <div style="float: right">
            @Html.ActionLink(" ", "Details", new { id = d.TUR_IN_CODIGO }, new
                {
                    style = "background: url('" + Url.Content("~/images/detalhes.png") + "') no-repeat center right; display:block; height:16px;width:16px; ",
                    @title = "Mais detalhes"
                })
        </div>
    </b>);

            columns.Add()
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(d =>
    @<b>
        <div style="float: right">
            @Html.ActionLink(" ", "Delete", new { id = d.TUR_IN_CODIGO }, new
                    {
                        style = "background: url('" + Url.Content("~/images/apagar.png") + "') no-repeat center right; display:block; height:16px;width:16px; ",
                        @title = "Apagar"
                    })
        </div>
    </b>);
        }).WithPaging(10).Sortable(true).WithMultipleFilters().SetLanguage("pt")
